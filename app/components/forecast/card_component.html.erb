<div class="w-full">
  <div class="flex flex-col items-center p-8 rounded-md w-60 sm:px-12 dark:bg-gray-900 dark:text-gray-100">
    <div class="text-center">
      <h2 class="text-md font-semibold"><%= @date.strftime("%B %e")%></h2>
    </div>
    <div class="mt-4 text-3xl font-semibold">
      <%= @current %>°
    </div>
    <img src="<%= @image %>" alt="<%= @description %>" class="w-18 h-18 mx-auto" />
    <div class="mb-2 text-3xl font-semibold">
      <%= @high %>°
      <span class="mx-1 font-normal">/</span>
      <%= @low %>°
    </div>
    <p class="dark:text-gray-400"><%= @description%></p>
  </div>
</div>